
@{
    Page.Title = "Fondanti";
    Layout = "~/_LayoutDefault.cshtml";


}

<body>
    <div class="container" id="section-cake">
        <!--Taart samenstellen-->
        <div class="row">
            <div class="col-sm-12 text-center">
                <h3 class="title">Stel hier je taart samen!</h3>
                <h5 id="makeCakeStep"></h5>
                <p id="makeCakeStepInfo"></p>
            </div>
        </div>
        <div class="row text-center" id="optionsMakeCake">

        </div>
        <div class="row text-center" id="chooseOptionMakeCake">

        </div>
        <div class="row text-center">
            <div class="col-12">
                <button id="makeCakeNextStep">Volgende stap</button>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="text-right">Prijs indicatie: €<div class="d-inline" id="totalPrice">0</div></div>
            </div>
        </div>
        <div class="row" id="visualFeedback">

        </div>
    </div>

    <div class="container" id="section-gallery">
        <!--Galerij-->
        <div class="row">
            <div class="col-sm-12">
                <h3 class="title text-center">
                    Gallerij
                </h3>
                <div id="carouselExample" class="carousel slide" data-ride="carousel" data-interval="3000">
                    <div class="carousel-inner row w-100 mx-auto" role="listbox">
                        <div class="carousel-item col-md-4 active">
                            <img class="img-fluid mx-auto d-block card fondanti-border" src="~/Imgs/bob.jpg" alt="slide 1">
                        </div>
                        <div class="carousel-item col-md-4">
                            <img class="img-fluid mx-auto d-block card fondanti-border" src="~/Imgs/bruidstaart1.jpg" alt="slide 2">
                        </div>
                        <div class="carousel-item col-md-4">
                            <img class="img-fluid mx-auto d-block card fondanti-border" src="~/Imgs/bruidstaart2.jpg" alt="slide 3">
                        </div>
                        <div class="carousel-item col-md-4">
                            <img class="img-fluid mx-auto d-block card fondanti-border" src="~/Imgs/game.jpg" alt="slide 4">
                        </div>
                        <div class="carousel-item col-md-4">
                            <img class="img-fluid mx-auto d-block card fondanti-border" src="~/Imgs/halloween.jpg" alt="slide 5">
                        </div>
                        <div class="carousel-item col-md-4">
                            <img class="img-fluid mx-auto d-block card fondanti-border" src="~/Imgs/nijntje.jpg" alt="slide 6">
                        </div>
                        <div class="carousel-item col-md-4">
                            <img class="img-fluid mx-auto d-block card fondanti-border" src="~/Imgs/sesamstraat.jpg" alt="slide 7">
                        </div>
                        <div class="carousel-item col-md-4">
                            <img class="img-fluid mx-auto d-block card fondanti-border" src="~/Imgs/unicorn.jpg" alt="slide 7">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
                        <i class="fa fa-chevron-left text-big"></i>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next text-faded" href="#carouselExample" role="button" data-slide="next">
                        <i class="fa fa-chevron-right text-big"></i>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>





